<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="recipe"
            type="com.sample.cook.data.Recipe" />

        <variable
            name="recipeHandler"
            type="com.sample.cook.adapters.RecipeHandler" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_recipe_height"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{onItemClick}">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:contentDescription="@null"
            android:padding="@dimen/stroke_size_normal"
            android:scaleType="centerCrop"
            app:recipeImageUri="@{recipe.imageUri}"
            tools:srcCompat="@tools:sample/backgrounds/scenic[9]" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/margin_normal"
            android:background="@drawable/bg_recipe_item_text"
            android:fontFamily="@font/khula_semibold"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_small"
            android:paddingRight="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_small"
            android:text='@{recipe.name }'
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_18sp" />

        <ImageView
            android:layout_width="@dimen/icon_size_normal"
            android:layout_height="@dimen/icon_size_normal"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/margin_normal"
            android:background="@drawable/bg_recipe_delete_button"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:onClick="@{(view) -> recipeHandler.onRemove(view, recipe)}"
            android:padding="@dimen/padding_small"
            android:tint="@android:color/white"
            app:isGone='@{!recipe.type.equals("my_recipes")}'
            app:srcCompat="@drawable/ic_minus" />
    </FrameLayout>
</layout>
