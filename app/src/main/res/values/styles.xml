<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/khula_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- applied when TextInputLayout is focused -->
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxStrokeWidth">@dimen/stroke_size_normal</item>

        <!-- applied when hint is not focused -->
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <style name="App.TextInputLayout.HintTextAppearance" parent="@android:style/TextAppearance">
        <!-- applied when TextInputLayout is focused -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/khula_semibold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
</resources>
